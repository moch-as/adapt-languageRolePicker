<div class="languagepicker__inner">

    {{#if displayTitle}}
        <div class="languagepicker__title">
            <div class="languagepicker__title-inner" role="heading" aria-level="1">
                {{{compile displayTitle}}}
            </div>
        </div>
    {{/if}}

    {{#if body}}
        <div class="languagepicker__body">
            <div class="languagepicker__body-inner">
                {{{compile body}}}
            </div>
        </div>
    {{/if}}

    {{#if _roles}}
        <div class="languagepicker__options">
            <div class="languagepicker__options-icon icon icon-language-1"></div>
            <select class="languagepicker__options-select" name="languages" id="languagepicker-languages-select">

            {{#each _languages}}
                <option value="{{_language}}"{{#if _isSelected}} selected{{/if}}>
                    {{{compile displayName}}}
                </option>
            {{/each}}

            </select>
        </div>

        <div class="languagepicker__button">
            <div class="languagepicker__button-inner">

            {{#each _roles}}
                <button class="btn-text languagepicker__roles-btn is-{{_role}} js-languagepicker-btn-click{{#if _isDisabled}} is-disabled{{/if}}" value="{{_role}}"{{#if _isDisabled}} aria-disabled="true" tabindex="-1"{{/if}} language="{{_role}}">
                    {{{compile displayName}}}
                </button>
            {{/each}}

            </div>
        </div>
    {{else}}
        <div class="languagepicker__button">
            <div class="languagepicker__button-inner">

            {{#each _languages}}
                <button class="btn-text languagepicker__language-btn is-{{_language}} js-languagepicker-btn-click{{#if _isDisabled}} is-disabled{{/if}}" value="{{_language}}"{{#if _isDisabled}} aria-disabled="true" tabindex="-1"{{/if}} language="{{_language}}">
                    {{{compile displayName}}}
                </button>
            {{/each}}

            </div>
        </div>
    {{/if}}

</div>
